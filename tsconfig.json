        "module": "CommonJS",
        "outDir": "lib",
        "typeRoots": ["node_modules/@types"],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
